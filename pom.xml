      </dependency>

      <dependency>
        <groupId>com.redhat.ipaas</groupId>
        <artifactId>verifier</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>com.redhat.ipaas</groupId>
